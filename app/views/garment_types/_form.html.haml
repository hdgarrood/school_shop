= twitter_bootstrap_form_for(@garment_type, :horizontal => true) do |f| 
  = f.inputs t('models.garment_type.edit') do
    = render 'shared/error_messages', :target => @garment_type
    = f.text_field :name
    = f.actions do
      = f.submit t(:submit)
      = button_tag t(:cancel), :type => 'reset', :class => 'btn'
